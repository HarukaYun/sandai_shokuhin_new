
<section id="recommended" class="inner">
  <h3 data-aos="flip-left">
    <div class="sub_ttl"><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/item_sub_recommended.png" alt="Recommended"></div>
    <div class="ttl"><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/item_ttl_recommended.png" alt="こちらもおすすめ"></div>
  </h3>
  <ul class="item-list" data-aos="fade-up">
    {% assign names = product.title %}
    {% assign limit = 5 %}
    {% assign has_related_products = false %}
    {% for collection in product.collections %}
      {% unless collection.title == '全ての商品' %}
        {% assign sorted_products = collection.products | sort: 'best-selling' | reverse %}
        {% assign displayed_products = sorted_products | slice: 0, limit %}
        {% for displayed_product in displayed_products %}
          {% unless displayed_product.title == names %}
            {% assign has_related_products = true %}
    <li>
      <a href="{{ displayed_product.url }}" class="item_link">
      <div class="img">
      <img src="{{ displayed_product.featured_image.src | img_url: 'master' }}" alt="">
    </div>
    <p class="cat">{% for tag in displayed_product.tags %}
    {{ tag }}{% if forloop.last == false %}, {% endif %}
  {% endfor %}</p>
    <p class="product_name">{{ displayed_product.title }}</p>
    <p class="price">{{ displayed_product.price | money }}円(税込)</p>

      <!-- 星評価のプレースホルダー(main-product.liquidより) -->

      {% if displayed_product.metafields.reviews.rating_count > 0 %}
        <div class="rating-wrapper">
          {% liquid
            assign rating_decimal = 0
            assign decimal = displayed_product.metafields.reviews.rating.value.rating | modulo: 1
            if decimal >= 0.3 and decimal <= 0.7
              assign rating_decimal = 0.5
            elsif decimal > 0.7
              assign rating_decimal = 1
            endif
          %}
          <div
            class="rating"
            role="img"
            aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: displayed_product.metafields.reviews.rating.value, rating_max: displayed_product.metafields.reviews.rating.value.scale_max }}"
          >
            <span
              aria-hidden="true"
              class="rating-star"
              style="--rating: {{ displayed_product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ displayed_product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
            ></span>
          </div>
          <p class="rating-count caption">
            <span aria-hidden="true">({{ displayed_product.metafields.reviews.rating_count }})</span>
          </p>
        </div>
        {% else %}
        <div class="rating-wrapper" style="display: none;"></div>
        <p class="no-rating-message">まだレビューはありません</p>
        {% endif %}
        

<!-- 星評価のプレースホルダー -->
</a>
