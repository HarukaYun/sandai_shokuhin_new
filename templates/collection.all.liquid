{% assign current_collection = collection %}
<main>
    <div class="under_fv">
      <h2 class="under_ttl under_ttl_item-list"><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/item-list_ttl.png" alt="商品カテゴリー"></h2>
      <h2 class="colec_ttl">{{ collection.title }}</h2>
      <span class="deco deco1"><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/deco_wh1.png" alt=""></span>
      <span class="deco deco2"><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/deco_wh2.png" alt=""></span>
    </div>

  <section class="sec_category">
    <div class="inner">
    <ul class="category" data-aos="fade-up" data-aos-delay="100">
      <li id="from_cat">
        <h4>種類から選ぶ</h4>
        <ul class="links links_img">
          <li><a href="/collections/pork#products" class="arrow_a">あぐー（豚肉）<span class="arrow-right"></span></a></li>
          {% comment %} <li><a href="/collections/beef" class="arrow_a">牛肉<span class="arrow-right"></span></a></li> {% endcomment %}
          <li><a href="/collections/source#products" class="arrow_a">タレ漬け肉<span class="arrow-right"></span></a></li>
          <li><a href="/collections/soup#products" class="arrow_a">汁物<span class="arrow-right"></span></a></li>
        </ul>
      </li>
      <li id="from_price">
        <h4>予算から選ぶ</h4>
        <ul class="links">
          <li><a href="/collections/999#products" class="arrow_a">〜999円<span class="arrow-right"></span></a></li>
          <li><a href="/collections/1000-4999#products" class="arrow_a">1,000円〜4,999円<span class="arrow-right"></span></a></li>
          <li><a href="/collections/5000-9999#products" class="arrow_a">5,000円〜9,999円<span class="arrow-right"></span></a></li>
          <li><a href="/collections/10000#products" class="arrow_a">10,000円〜<span class="arrow-right"></span></a></li>
        </ul>
      </li>
      <li id="from_use">
        <h4>用途から選ぶ</h4>
        <ul class="links">
          <li><a href="/collections/bbq#products" class="arrow_a">BBQ/焼肉<span class="arrow-right"></span></a></li>
          <li><a href="/collections/sukiyaki#products" class="arrow_a">すき焼き/<br>しゃぶしゃぶ<span class="arrow-right"></span></a></li>
          <li><a href="/collections/gift#products" class="arrow_a">ギフト<span class="arrow-right"></span></a></li>
        </ul>
      </li>
    </ul>
  </div>
  </section>
  <section id="items">
    <div class="inner">
<dl class="order">
  <dt>並び順：</dt>
  <dd>
    <label class="selectbox-5">
    <select onchange="location = this.value;">
      <option value="{{ product.url }}?sort_by=best-selling" data-sort-by="best-selling">おすすめ</option>
      <option value="{{ product.url }}?sort_by=price-ascending" data-sort-by="price-ascending">価格が安い</option>
      <option value="{{ product.url }}?sort_by=created-descending">新着</option>
  </select>
</label>
      <span><img src="https://cdn.shopify.com/s/files/1/0879/4567/5034/files/arrow.svg" alt=""></span>
  </dd>
</dl>

  <ul class="item-list" data-aos="fade-up" data-aos-delay="100" id="products">
    {% for product in collection.products %}
    <li>
      <a class="item_link" href="{{ product.url }}">
      <div class="img">
      <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="">
    </div>
    <p class="cat">{% for tag in product.tags %}
    {{ tag }}{% if forloop.last == false %}, {% endif %}
  {% endfor %}</p>
    <p class="product_name">{{ product.title }}</p>
    <p class="price">{{ product.price | money }}円(税込)</p>
      <!-- 星評価のプレースホルダー(main-product.liquidより) -->

                  {% if product.metafields.reviews.rating_count > 0 %}
                    <div class="rating-wrapper">
                      {% liquid
                        assign rating_decimal = 0
                        assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                        if decimal >= 0.3 and decimal <= 0.7
                          assign rating_decimal = 0.5
                        elsif decimal > 0.7
                          assign rating_decimal = 1
                        endif
                      %}
                      <div
                        class="rating"
                        role="img"
                        aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}"
                      >
                        <span
                          aria-hidden="true"
                          class="rating-star"
                          style="--rating: {{ product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
                        ></span>
                      </div>
                      <p class="rating-count caption">
                        <span aria-hidden="true">({{ product.metafields.reviews.rating_count }})</span>
                      </p>
                    </div>
                    {% else %}
                    <div class="rating-wrapper" style="display: none;"></div>
                    <p class="no-rating-message">まだレビューはありません</p>
                    {% endif %}
                    

      <!-- 星評価のプレースホルダここまでー -->
  </a>
  <form action="/cart/add" method="post">
  <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
  <button type="submit" class="cart_btn">
    <svg class="icon_svg" viewBox="0 0 26 25" fill="none" xmlns="http://www.w3.org/2000/svg">
